<% if @result %>
<h1>The result is <%= @result %>!</h1>
<% end %>

<form method="get" action="/calculate">
  <input type="text" name="first_number" placeholder="0" value="<%= @first_number %>">
  <!-- <input type="text" name="operator" placeholder="+" value="<%= @operator %>"> -->
  <select name="operator" value="<%= @operator %>">
    <option value="+">+</option>
    <option value="-">-</option>
    <option value="*">*</option>
    <option value="/">/</option>
    <option value="**">**</option>
    <option value="sqrt">sqrt</option>
  </select>
  <input type="text" name="second_number" placeholder="0" value="<%= @second_number %>">
  <button>CALCULATE!</button>
</form>